<h1 class="h3 mb-2 text-gray-900">AdminsBackoffice::Questions#index</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4 border-bottom-primary">
  <div class="card-header py-3 border-left-primary">
    <h6 class="m-0 font-weight-bold text-primary">Questions list</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Description</th>
            <th class="actions-table">
              <%= link_to new_admins_backoffice_question_path, class: "btn btn-info btn-icon-split " do %>
                <span class="icon text-white-50">
                  <i class="fa-solid fa-user-plus"></i>
                </span>
                <span class="text-actions">New Question</span>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.try(:id) %></td>
              <td><%= question.try(:description) %></td>
              <td class="actions-table">
                <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary" do %>
                 <i class="fa-solid fa-pen-to-square"></i>
                <% end %>

                <%= link_to admins_backoffice_question_path(question), method: :delete, class: "btn btn-danger",
                                 data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @questions %>
    </div>
  </div>
</div>
