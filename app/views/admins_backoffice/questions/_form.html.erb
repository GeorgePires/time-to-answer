<% if @question.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h2><%= t('messages.errors') %></h2>
    <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admins_backoffice, @question], local: true, class: "row g-3") do |form| %>
  <div class="col-12">
    <%= form.label :subject, class: "form-label" %>
    <%= form.collection_select(:subject_id, Subject.all, :id, :description, {}, { class: "form-control" }) %>
  </div>

  <div class="col-12">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, autofocus: true, rows: 3, autocomplete: "description", class: "form-control", placeholder: "Question description" %>
  </div>

  <div class="col-12 p-2">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>